@model ComplaintManagementSystem.Models.Login

@{
    ViewBag.Title = "Login Page";
}
<style>
    .login-form-gap {
	    margin-bottom: 20px;
	}
</style>
<h1>Login</h1>
<hr>
 @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.ValidationMessage("Error")
    <div class="col-md-6 login-form-gap">
	    @Html.Label("Email Id:")
	    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
	    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-12"></div>
    <div class="col-md-6 login-form-gap">
        @Html.Label("Password:")
        @Html.EditorFor(model => model.Pssd, new { htmlAttributes = new { @class = "form-control" } })
	    @Html.ValidationMessageFor(model => model.Pssd, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-12"></div>
    <div class="col-md-6 login-form-gap">
	    @Html.Label("Login Type")
	    @{
		    List<SelectListItem> listItems = new List<SelectListItem>();
	        listItems.Add(new SelectListItem { Text = "System Admin", Value = "SystemAdmin", Selected = true });
	        listItems.Add(new SelectListItem { Text = "Product Admin", Value = "ProductAdmin", });
	        listItems.Add(new SelectListItem { Text = "Worker", Value = "Worker" });
	        listItems.Add(new SelectListItem { Text = "Customer", Value = "Customer" });
        }
        @Html.DropDownListFor(model => model.LoginType, listItems, new { @class = "form-control" })
	</div>
    
    <div class="col-md-12"></div>
    <div class="col-md-4 login-form-gap">
	    <input type="submit" value="Log In" class="btn btn-success" />
    </div>
    <div class="col-md-12 login-form-gap">
	    @Html.ActionLink("Forgot Password", "ForgotPassword", "Home", null, new { @class = "lnk" })
    </div>

    
}
<div class="clearfix"></div>
<br/><br/><br/><br/><br/><br/><br/><br/>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
