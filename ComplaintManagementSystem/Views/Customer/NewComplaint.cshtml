@model ComplaintManagementSystem.Models.tblComplaint

@{
    ViewBag.Title = "NewComplaint";
}
<!--<style>
    body {
        background-color: #bdb9b9;
    }
</style>-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Write Your Complaint</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Complaint", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.ComplaintText,10,55,null)
                @Html.ValidationMessageFor(model => model.ComplaintText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Complaint Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
         {
             Text = "Credit Card",
             Value = "1",
             Selected = true

         });
    listItems.Add(new SelectListItem
         {
             Text = "Debit Card",
             Value = "2",
         });
    listItems.Add(new SelectListItem
         {
             Text = "Online Banking",
             Value = "3"
         });
    listItems.Add(new SelectListItem
    {
        Text = "Loan",
        Value = "4"
    });
                }
                @Html.DropDownListFor(model => model.ProductId, listItems)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Submit Complaint" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>