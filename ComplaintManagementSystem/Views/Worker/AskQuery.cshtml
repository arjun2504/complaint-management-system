@model ComplaintManagementSystem.Models.tblComplaint

@{
    ViewBag.Title = "Reply";
}

<style>
    body {
        background-color: #bdb9b9;
    }
</style>

<h2>Ask Your Query</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })      

        <div class="form-group">
            @Html.Label("Ask your Query", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.WorkerQuery, 10, 55, null)
                @Html.ValidationMessageFor(model => model.WorkerQuery, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Ask Query" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>